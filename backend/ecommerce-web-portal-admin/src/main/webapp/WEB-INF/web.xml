<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
	version="6.0">

	<display-name>portal</display-name>
	<description>Software Description</description>

	<!-- This app is cluster-ready -->
	<distributable />

	<welcome-file-list>
		<welcome-file>index.jsf</welcome-file>
	</welcome-file-list>

	<resource-env-ref>
		<resource-env-ref-name>BeanManager</resource-env-ref-name>
		<resource-env-ref-type>jakarta.enterprise.inject.spi.BeanManager</resource-env-ref-type>
	</resource-env-ref>

	<listener>
		<listener-class>jakarta.faces.webapp.FacesServlet</listener-class>
	</listener>

	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>jakarta.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.jsf</url-pattern>
	</servlet-mapping>

	<!-- Contexts -->
	<context-param>
		<param-name>jakarta.faces.PROJECT_STAGE</param-name>
		<param-value>Development</param-value>
	</context-param>
	<context-param>
		<param-name>jakarta.faces.AUTOMATIC_EXTENSIONLESS_MAPPING</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<param-name>jakarta.faces.FACELETS_REFRESH_PERIOD</param-name>
		<param-value>0</param-value>
	</context-param>
	<context-param>
		<param-name>jakarta.faces.INTERPRET_EMPTY_STRING_SUBMITTED_VALUES_AS_NULL</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<param-name>jakarta.faces.DATETIMECONVERTER_DEFAULT_TIMEZONE_IS_SYSTEM_TIMEZONE</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<param-name>jakarta.faces.FACELETS_SKIP_COMMENTS</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<param-name>jakarta.faces.ENABLE_WEBSOCKET_ENDPOINT</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<param-name>jakarta.faces.WEBSOCKET_ENDPOINT_PORT</param-name>
		<param-value>8000</param-value>
	</context-param>



	<!-- PrimeFaces Context Parameters -->
	<context-param>
		<param-name>primefaces.CLIENT_SIDE_LOCALISATION</param-name>
		<param-value>false</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.CLIENT_SIDE_VALIDATION</param-name>
		<param-value>false</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.COOKIES_SAME_SITE</param-name>
		<param-value>Strict</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.CSP</param-name>
		<param-value>false</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.CSP_POLICY</param-name>
		<param-value>null</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.CSP_REPORT_ONLY_POLICY</param-name>
		<param-value>null</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.DIR</param-name>
		<param-value>ltr</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.EARLY_POST_PARAM_EVALUATION</param-name>
		<param-value>false</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.EXCEPTION_TYPES_TO_IGNORE_IN_LOGGING</param-name>
		<param-value>null</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.FLEX</param-name>
		<param-value>false</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.HIDE_RESOURCE_VERSION</param-name>
		<param-value>false</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.HTML5_COMPLIANCE</param-name>
		<param-value>false</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.INTERPOLATE_CLIENT_SIDE_VALIDATION_MESSAGES</param-name>
		<param-value>false</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.LEGACY_WIDGET_NAMESPACE</param-name>
		<param-value>false</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.MARK_INPUT_AS_INVALID_ON_ERROR_MSG</param-name>
		<param-value>false</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.MOVE_SCRIPTS_TO_BOTTOM</param-name>
		<param-value>false</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.MULTI_VIEW_STATE_STORE</param-name>
		<param-value>session</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.PRIME_ICONS</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.RESET_VALUES</param-name>
		<param-value>false</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.SUBMIT</param-name>
		<param-value>full</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.THEME</param-name>
		<param-value>saga</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.TOUCHABLE</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.TRANSFORM_METADATA</param-name>
		<param-value>false</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.UPLOADER</param-name>
		<param-value>auto</param-value>
	</context-param>

	<!-- Error Page Custom -->
	<error-page>
		<error-code>404</error-code>
		<location>/404.jsf</location> <!-- /src/main/webapp/404.html -->
	</error-page>

	<error-page>
		<error-code>400</error-code>
		<location>/400.jsf</location> <!-- /src/main/webapp/404.html -->
	</error-page>

	<error-page>
		<error-code>500</error-code>
		<location>/500.jsf</location> <!-- /src/main/webapp/500.html -->
	</error-page>

	<session-config>
		<session-timeout>60</session-timeout>
	</session-config>

	<!-- Apache Shiro - Security Framework -->
	<!-- <listener> -->
	<!-- <listener-class>org.apache.shiro.ee.listeners.EnvironmentLoaderListener</listener-class> -->
	<!-- </listener> -->

